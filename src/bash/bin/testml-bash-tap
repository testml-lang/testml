#!/usr/bin/env bash

# shellcheck disable=1090,2034,2153

set -e -u -o pipefail

testml-run-file() (
  ast=$1

  source "$TESTML_ROOT_LIB/testml/run.bash"
  source "$TESTML_ROOT_LIB/testml/run/tap.bash"

  PATH=$TESTML_LIB:$TESTML_DIR:$PATH \
    source "$TESTML_BRIDGE.bash" \
    2>/dev/null || true

  TESTML_EXEC_BASH=${ast%.lingy}.bash
  TESTML_ROOT_BIN=${TESTML_ROOT_LIB%lib}bin

  if [[ $ast -nt $TESTML_EXEC_BASH ]]; then
    "$TESTML_ROOT_BIN/lingy-to-bash" < "$ast" \
      > "$TESTML_EXEC_BASH"
  fi

  source "$TESTML_EXEC_BASH"

  bridge=${ast%.*.lingy}.bridge.bash

  if [[ -f $bridge ]]; then
    source "$bridge"
  fi

  TestML.main
)

[[ ${TESTML_SOURCED-} ]] ||
  source "${TESTML_ROOT:-$(dirname "$0")/..}/bin/testml"

source-testml-config

: "${TESTML_BIN:=testml-bash-tap}"
: "${TESTML_LANG:=bash}"
: "${TESTML_MODULE:=}"
: "${TESTML_BRIDGE:=testml-bridge}"

[[ $0 != "${BASH_SOURCE[0]}" ]] ||
  testml-run "$@"
