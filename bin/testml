#!/usr/bin/env bash

# shellcheck disable=1090,2034

set -e

export TESTML_VERSION='0.3.0'

TESTML_ROOT=${TESTML_ROOT:-$(cd "$(dirname "$0")/.." && pwd)}
export TESTML_ROOT

main() {
  if is-tty; then
    run-cli "$@"

  else
    check-input-file "$@"

    set-testml-bin

    exec "$TESTML_BIN" "$TESTML_INPUT"
  fi
}

testml-run() {
  if is-tty; then
    run-cli "$@"

  else
    set-testml-vars

    compile-testml

    set-more-testml-vars

    testml-run-file "$TESTML_EXEC"
  fi
}

run-cli() {
  source "$TESTML_ROOT/bin/testml-cli.sh"

  testml-run-cli "$@"
}

check-input-file() {
  [[ $# == 1 && -n $1 ]] ||
    die "Can't determine testml source file"
  [[ -e $1 ]] ||
    die "TestML input file '$1' does not exist"

  export TESTML_INPUT=$1
}

set-testml-bin() {
  local PATH="$TESTML_ROOT/bin:$PATH"

  if [[ -n $TESTML_BIN ]]; then
    can "$TESTML_BIN" ||
      die "TESTML_BIN=$TESTML_BIN but '$TESTML_BIN' not found"
    export TESTML_BIN=$can_path
    return 0
  fi

  if [[ -n $TESTML_RUN ]]; then
    TESTML_BIN="testml-$TESTML_RUN"
    can "$TESTML_BIN" ||
      die "TESTML_RUN=$TESTML_RUN but '$TESTML_BIN' not found"
    export TESTML_RUN
    export TESTML_BIN=$can_path
    return 0
  fi

  die "
Can't determine TestML runner binary to use.
Try setting TESTML_RUN or TESTML_BIN.
See 'testml --list' for a list of runners.
"
}

set-testml-vars() {
  TESTML_DIR=$(cd "$(dirname "$TESTML_INPUT")" && pwd)
  export TESTML_DIR
  TESTML_FILE=$(basename "$TESTML_INPUT")
  export TESTML_FILE
  export TESTML_PATH="$TESTML_DIR/$TESTML_FILE"
  export TESTML_CACHE="$TESTML_DIR/.testml"
  export TESTML_EXEC="$TESTML_CACHE/$TESTML_FILE.json"
}

set-more-testml-vars() {
  local dir=
  if [[ $TESTML_PATH =~ (^.*)/testml/ ]]; then
    dir=":${BASH_REMATCH[1]}"
  fi
  TESTML_LIB="$TESTML_DIR$dir"
  if [[ $TESTML_LANG == 'perl6' ]]; then
    TESTML_LIB=${TESTML_LIB//:/,}
  fi
  export TESTML_LIB

  export TESTML_ROOT_LIB="$TESTML_ROOT/lib/$TESTML_LANG"
}

compile-testml() {
  [[ -e $TESTML_EXEC && ! -s $TESTML_EXEC ]] &&
    rm -f "$TESTML_EXEC"
  [[ $TESTML_EXEC -nt $TESTML_PATH ]] &&
    return 0

  mkdir -p "$TESTML_CACHE"

  testml-compiler "$TESTML_PATH" > "$TESTML_EXEC" || {
    local rc=$?
    rm -f "$TESTML_EXEC"
    return "$rc"
  }
}

is-tty() {
  [[ -t 0 || -t 1 ]]
}

can() {
  can_path=$(which "$1") || return $?
}

die() {
  if [[ $# -eq 0 ]]; then
    echo "Died" >&2
  else
    echo "$*" >&2
  fi
  exit 1
}

TESTML_SOURCED=true

[[ $0 != "${BASH_SOURCE[0]}" ]] || main "$@"

# vim: ft=sh sw=2 lisp:
