# shellcheck shell=bash

TESTML_ROOT=$(cd "$(dirname "${BASH_SOURCE[0]:-$0}")" && pwd)

[[ -e $TESTML_ROOT/ext ]] || (
  cd "$TESTML_ROOT" || exit $?
  make ext &>/dev/null
)

export TESTML_ROOT
export PATH=$TESTML_ROOT/bin:$PATH
export MANPATH=$TESTML_ROOT/man${MANPATH:+:$MANPATH}
export PYTHONPATH=$TESTML_ROOT/src/python/lib${PYTHONPATH:+:$PYTHONPATH}
